{
  "name": "node-typescript-template",
  "version": "1.0.0",
  "description": "Base template for nodejs application",
  "main": "dist/app.js",
  "scripts": {
    "start": "nodemon --watch src/**/*.ts --exec ts-node demo/demo.ts",
    "build": "tsc",
    "demo:server": "ts-node ./demo/demo.ts",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "test": "mocha -r ts-node/register test/**/*.ts"
  },
  "publishConfig": { "registry": "https://npm.pkg.github.com/" },
  "author": "Maxim Savin <soulman.is.good@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "log4js": "^6.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/eslint": "^6.8.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.50",
    "@types/sinon": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "chai": "^4.2.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "^10.2.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
